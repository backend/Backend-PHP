<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{% block title %}{{ applicationName|default('Backend-PHP') }}{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">

        <!-- Le styles -->
        {% block stylesheets %}
        <!--<link rel="stylesheet" href="{{ SITE_LINK }}/css/bootstrap.css">-->
        <!-- From http://bootswatch.com/ -->
        <link rel="stylesheet" href="{{ SITE_LINK }}/css/cerulean.min.css">
        <style>
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
        </style>
        {% endblock %}

        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
            <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        <!-- Le fav and touch icons -->
        <link rel="shortcut icon" href="images/favicon.ico">
        <link rel="apple-touch-icon" href="images/apple-touch-icon.png">
        <link rel="apple-touch-icon" sizes="72x72" href="images/apple-touch-icon-72x72.png">
        <link rel="apple-touch-icon" sizes="114x114" href="images/apple-touch-icon-114x114.png">
    </head>
    <body>
        {% block navbar %}
            <div class="navbar navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>
                        <a class="brand" href="#">{{ applicationName|default('Backend-PHP') }}</a>
                        <div class="nav-collapse">
                            <ul class="nav">
                                <li class="active"><a href="#">Home</a></li>
                                <li><a href="#about">About</a></li>
                                <li><a href="#contact">Contact</a></li>
                            </ul>
                        </div><!--/.nav-collapse -->
                    </div>
                </div>
            </div>
        {% endblock %}
        <header id="header">
            {% block header %}
            {% endblock %}
        </header><!-- end #header -->
        <div id="body">
            {% block flash %}
                {% set info = flash.info %}
                {% set success = flash.success %}
                {% set error = flash.error %}
                <div class="container">
                    {% if info %}
                        <div class="alert alert-info">
                            {{ info }}
                        </div>
                    {% endif %}
                    {% if success %}
                        <div class="alert alert-success">
                            {{ success }}
                        </div>
                    {% endif %}
                    {% if error %}
                        <div class="alert alert-error">
                            {{ error }}
                        </div>
                    {% endif %}
                </div>
            {% endblock %}
            {% block body %}
            {% endblock %}
        </div><!-- end #body -->
        <footer id="footer">
            {% block footer %}
            {% endblock %}
        </footer><!-- end #footer -->
        {% block javascripts %}
        <!-- Le javascript
        ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="{{ SITE_LINK }}/js/jquery.min.js"></script>
        <script src="{{ SITE_LINK }}/js/bootstrap-transition.js"></script>
        <script src="{{ SITE_LINK }}/js/bootstrap-alert.js"></script>
        <script src="{{ SITE_LINK }}/js/bootstrap-modal.js"></script>
        <script src="{{ SITE_LINK }}/js/bootstrap-dropdown.js"></script>
        <script src="{{ SITE_LINK }}/js/bootstrap-scrollspy.js"></script>
        <script src="{{ SITE_LINK }}/js/bootstrap-tab.js"></script>
        <script src="{{ SITE_LINK }}/js/bootstrap-tooltip.js"></script>
        <script src="{{ SITE_LINK }}/js/bootstrap-popover.js"></script>
        <script src="{{ SITE_LINK }}/js/bootstrap-button.js"></script>
        <script src="{{ SITE_LINK }}/js/bootstrap-collapse.js"></script>
        <script src="{{ SITE_LINK }}/js/bootstrap-carousel.js"></script>
        <script src="{{ SITE_LINK }}/js/bootstrap-typeahead.js"></script>
        {% endblock %}
    </body>
</html>
