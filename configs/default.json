{
    "services": {
        "backend.Render": "Backend\\Base\\Utilities\\Render",
        "backend.Logger": "Backend\\Core\\Utilities\\Logger",
        "backend.PearLogger": [
            "Backend\\Core\\Utilities\\PearLogger",
            [
                { "filename": "/tmp/backend-pear.log" }
            ]
        ]
    },

    "subjects": {
        "Backend\\Core\\Utilities\\ApplicationEvent": {
            "observers": [
                "backend.Logger",
                "backend.PearLogger"
            ]
        },

        "Backend\\Core\\Application": {
            "observers": [
                "backend.Logger",
                "backend.PearLogger"
            ]
        }
    },

    "application": {
        "values": {
            "applicationName": "Backend PHP"
        }
    },

    "database": {
        "default": {
            "connection": {
                "driver": "sqlite",
                "path": "/tmp/backend-core.sqlite"
            }
        },
        "default_mysql": {
            "connection": {
                "driver": "mysql",
                "username": "username",
                "password": "password",
                "host": "localhost",
                "dbname": "database"
            }
        }
    }
}
